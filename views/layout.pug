doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description' content='Frustrations Journal helps you take problems and turn them into real solutions.')
		meta(name='author' content='Billy')
		link(rel='icon' href='/')

		title= title

		// Google Analytics
		script(async src='https://www.googletagmanager.com/gtag/js?id=UA-15830719-3')
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-15830719-3');
		
		link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css' integrity='sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B' crossorigin='anonymous')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,800')
		link(rel='stylesheet', href='/styles/style.css')

		script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
		script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')

		script(src='https://unpkg.com/feather-icons')
	body
		.container-fluid
			nav.navbar.navbar-light.justify-content-center.fixed-top.bg-light.shadow
				ul.navbar-nav
					if user
						li.nav-item.justify-content-center
							a.nav-link(href='/logout' style='text-align: center;')
								i(data-feather='power' height='20' width='20' stroke-width='1')
								.nav-label Logout
					li.nav-item
						a.nav-link(href='/journal')
							i(data-feather='bookmark' height='20' width='20' stroke-width='1')
							.nav-label Journal
					if user
						li.nav-item
							a.nav-link(href='/profile')
								i(data-feather='user' height='20' width='20' stroke-width='1')
								.nav-label Profile


			block content
			script
				include ../public/js/script.js